{
  "manifest_version": 3,
  "name": "Reminder Extension",
  "version": "1.0",
  "description": "Send reminders to your future self",

  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "128": "icon.png"
  }
}
